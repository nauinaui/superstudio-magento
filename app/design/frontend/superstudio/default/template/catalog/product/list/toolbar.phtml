/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>

<?php if($this->getCollection()->getSize()): ?>
    <div class="toolbar">
        <?php if( $this->isExpanded() ): ?>
            <div class="result-bar sorter">
                <span class="sort-title"><?php echo $this->__('Sort By') ?>:</span>
                <div id="sortList" class="sort-list btn-group" data-toggle="buttons">
                    <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                        <label class="btn btn-link <?php if($this->isOrderCurrent($_key)): ?> active<?php endif; ?>">
                            <input type="radio" value="<?php echo $this->getOrderUrl($_key, 'asc') ?>" name="options" id="option1" autocomplete="off" <?php if($this->getCurrentDirection() == 'desc'): ?>onclick="<?php echo $this->getOrderUrl(null, 'asc') ?>"<?php else: ?>onclick="<?php echo $this->getOrderUrl(null, 'desc') ?>"<?php endif; ?> <?php if($this->isOrderCurrent($_key)): ?> checked="checked" <?php endif; ?>>
                            <?php echo $this->__($_order) ?>
                            <i class="glyphicon glyphicon-triangle-bottom"></i>
                        </label>
                    <?php endforeach; ?>
                </div>
                <span class="results-title"><em><?php echo $this->getTotalNum() ?></em> resultados</span>
            </div>
        <?php endif; ?>
    </div>
<?php endif ?>